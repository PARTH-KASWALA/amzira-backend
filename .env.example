# Database Configuration
DATABASE_URL=postgresql://amzira_user:your_password@localhost:5432/amzira_db

# Security
SECRET_KEY=your-secret-key-here-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Razorpay
RAZORPAY_KEY_ID=rzp_test_XXXXXX
RAZORPAY_KEY_SECRET=XXXXXX
RAZORPAY_WEBHOOK_SECRET=XXXXXX

# SMTP Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@amzira.com
SMTP_PASSWORD=your_app_password
EMAILS_FROM_EMAIL=noreply@amzira.com
EMAILS_FROM_NAME=AMZIRA

# Application
PROJECT_NAME=AMZIRA
API_V1_STR=/api/v1
BACKEND_CORS_ORIGINS=["http://localhost:3000","https://amzira.com","https://www.amzira.com"]

# Environment
ENVIRONMENT=development
# Keep DEBUG disabled in production to avoid leaking internal errors.
DEBUG=False
ADMIN_ALLOWED_IPS=["127.0.0.1"]
TRUST_PROXY_HEADERS=True
TRUSTED_PROXY_IPS=["127.0.0.1","::1"]
DEFAULT_ADMIN_PASSWORD=

# File Upload
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,webp

# Frontend URL
FRONTEND_URL=https://amzira.com
